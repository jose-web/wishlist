---
interface Props {
	title: string;
}

const { title } = Astro.props;

import { ViewTransitions } from "astro:transitions";

const pathname = new URL(Astro.request.url).pathname;
const currentPath = pathname.slice(9);
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/wishlist/gift.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<ViewTransitions />
	</head>
	<body class="dark:bg-gray-900 dark:text-white">
		<header class="sticky top-0 z-10">
			<nav class="bg-white border-gray-200 dark:bg-gray-900">
				<div class="flex flex-wrap items-center justify-between max-w-screen-xl mx-auto p-4">
					<a
						href="/wishlist"
						class="flex items-center space-x-3 rtl:space-x-reverse">
						<img src="/wishlist/gift.svg" class="h-[2rem]" />
						<span class="self-center text-2xl font-semibold whitespace-nowrap dark:text-white">WishList</span>
					</a>

					<input hidden type="checkbox" id="expand-menu" class="peer">
					
					<label for="expand-menu" class="md:hidden text-3xl peer-checked:hidden">☰</label>
					<label for="expand-menu" class="md:hidden text-3xl hidden peer-checked:block">⤫</label>

					<div class="items-center justify-between hidden peer-checked:block w-full md:flex md:w-auto md:order-1 text-center">
						<ul class="flex flex-col mt-4 font-medium md:flex-row md:mt-0 md:space-x-8 ">
							<li>
								<a
									href="/wishlist"
									class={"block py-2 px-3 md:p-0 " + (currentPath == "/" ? "text-blue-600" : "")}
									aria-current="page">Home</a>
							</li>
							<li>
								<a
									href="/wishlist/steam"
									class={"block py-2 px-3 md:p-0 " +
										(currentPath == "/steam"
											? "text-blue-600"
											: "")}
									aria-current="page">Steam</a>
							</li>
							<li>
								<a
									href="/wishlist/amazon"
									class={"block py-2 px-3 md:p-0 " +
										(currentPath == "/amazon"
											? "text-blue-600"
											: "")}
									aria-current="page">Amazon</a>
							</li>
						</ul>
					</div>
				</div>
			</nav>
		</header>
		
		<main class="max-w-screen-xl mx-auto p-4">
			<slot />
		</main>
	</body>
</html>
